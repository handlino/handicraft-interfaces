<% remote_form_for item , :url => { :controller => 'single_field_inline_edit', :action => 'update', :id => item } , :html => {:method => :put} do |f| -%>

  <%= f.text_field :name %>
  
  <div class="editor">
    <%= f.submit "Submit", :class => 'submit' %> or <%= cancel_link( 'cancel', item) %>
    
  </div>
<% end %>